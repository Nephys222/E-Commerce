<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_md_theme_light_onPrimaryContainer</item>
        <item name="colorPrimaryVariant">@color/blue_md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/blue_md_theme_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondaryVariant">@color/blue_md_theme_light_primary</item>
        <item name="colorOnSecondary">@color/blue_md_theme_light_onPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/blue_md_theme_light_onPrimaryContainer</item>
        <item name="titleTextColor">@color/blue_md_theme_light_onPrimaryContainer</item>

    </style>

    <style name="Theme.Ecommerce.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Ecommerce.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ecommerce.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>